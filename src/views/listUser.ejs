<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= data.title %></title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous"
        />
        <style>
            h2 {
                margin-top: 20px;
                margin-bottom: 20px;
                text-align: center;
            }
        </style>
    </head>
    <body>
        <div class="container mt-5">
            <h2>Danh sách tài khoản</h2>
            <div class="mb-3 text-end">
                <a href="/create-user" class="btn btn-primary">Add New User</a>
            </div>
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Full Name</th>
                        <th>Address</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i = 0; i < data.users.length; i++) { %>
                    <tr>
                        <td><%= data.users[i].id %></td>
                        <td><%= data.users[i].username %></td>
                        <td><%= data.users[i].fullname %></td>
                        <td><%= data.users[i].address %></td>
                        <td>
                            <a
                                href="/edit-user/<%= data.users[i].id %>"
                                class="btn btn-warning btn-sm"
                                >Edit</a
                            >
                            <form action="/delete-user" method="POST">
                                <input
                                    type="hidden"
                                    name="userId"
                                    value="<%= data.users[i].id %>"
                                />
                                <button
                                    type="submit"
                                    class="btn btn-danger btn-sm"
                                >
                                    Xóa
                                </button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </body>
</html>
